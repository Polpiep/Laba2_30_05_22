<Window x:Class="Laba1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba1"
        mc:Ignorable="d"
        Title="counter" Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        Background="Bisque">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="180*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" >
            <TextBlock Margin="5" FontSize="20">
                Введите a, b, c для квадратного уравнения a^2+2b+c
            </TextBlock>
            <Label>Введите переменную a</Label>
            <TextBox  x:Name="tbA" FontSize="20"></TextBox>
            <Label>Введите переменную b</Label>
            <TextBox x:Name="tbB" FontSize="20"></TextBox>
            <Label>Введите переменную c</Label>
            <TextBox x:Name="tbC" FontSize="20"></TextBox>
        </StackPanel>
        <Button  Grid.Row="1" Click="Button_Click">Посчитать</Button>
    </Grid>
</Window>
